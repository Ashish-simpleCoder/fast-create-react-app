{
   "compilerOptions": {
      "target": "ES5",
      "lib": [
         "DOM",
         "ESNext"
      ],
      "moduleResolution": "node",
      "module": "commonjs",
      "baseUrl": "./src",
      "checkJs": true,
      "alwaysStrict": true,
      "jsx": "react-jsx",
      "paths": {
         "@comp/*": [
            "./components/*"
         ]
      },
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noUnusedLocals": false,
      "skipLibCheck": true
   }
}